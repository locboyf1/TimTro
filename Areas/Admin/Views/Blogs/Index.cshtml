@model IEnumerable<TimTro.Models.TbBlog>
@using TimTro.Models
@using TimTro.Utilities;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.active = "blogs";

}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">

                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Danh sách blog</h3>

                        </div>

                        <!-- /.card-header -->
                        <div class="card-body">
                            <p>
                                <a asp-action="Create">Tạo blog mới</a>
                            </p>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th style="width: 10px">STT</th>
                                        <th>Tiêu đề</th>
                                        <th>Người đăng</th>
                                        <th>Đăng lúc</th>
                                        <th>Ảnh</th>
                                        <th>Trạng thái</th>
                                        <th style="width: 160px;">Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 1;
                                    }
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@(i++)</td>
                                            <td>@item.Title</td>
                                            <td>@item.IduserNavigation.Name</td>
                                            <td>@item.Time</td>
                                            <td><img src="@Images.ConvertToBase64Src(item.Image, item.ImageType)" alt="Image" style="width: 100px; height: 60px;" /></td>
                                            <td>
                                                <form asp-action="HideShow" method="post">
                                                    <input type="hidden" name="id" value="@item.Idblog" />
                                                    <button type="submit" style="padding: 10px; background-color: yellow; border-radius: 10px"><i class="far @( item.IsShow ? "fa-eye" : "fa-eye-slash")"></i></button>
                                                </form>
                                            </td>
                                            <td>
                                                <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.Idblog">Sửa</a> |
                                                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Idblog">Chi tiết</a>
                                            </td>
                                        </tr>
                                    }
                                    
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer clearfix">
                            <ul class="pagination pagination-sm m-0 float-right">
                                <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                                <li class="page-item"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                            </ul>
                        </div>
                    </div>
                    <!-- /.card -->
                    <!-- /.card -->
                </div>
                <!-- /.col -->
                <!-- /.col -->
            </div>
            <!-- /.row -->

        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->